{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "glb-transform",
  "title": "glb transform",
  "description": "Raycast extension wrapper around gltf transform cli for fast glb transform operations like compression",
  "icon": "extension-icon.png",
  "author": "bhushanwagh6",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "glb-draco",
      "title": "Draco Compress GLB",
      "description": "Compress GLB geometry with Draco",
      "mode": "no-view"
    },
    {
      "name": "glb-ktx",
      "title": "KTX Compress GLB",
      "description": "Compress GLB textures with KTX (ETC1S)",
      "mode": "no-view"
    },
    {
      "name": "glb-compress",
      "title": "Full GLB Compression",
      "description": "Draco geometry + KTX texture compression",
      "mode": "no-view"
    },
    {
      "name": "glb-advanced",
      "title": "Advance GLB Transform",
      "description": "Fine-grained control over GLB transformations",
      "mode": "view"
    },
    {
      "name": "glb-inspect",
      "title": "Inspect GLB File",
      "description": "Inspect GLB file details",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.10",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}